{
  "name": "xfer",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev server.ts",
    "start": "ts-node server.ts",
    "compileToJs": "tsc",
    "makeExecutableDirs": "mkdir -p bin/win && mkdir -p bin/osx && mkdir -p bin/linux",
    "prepareBuild": "npm run compileToJs && npm run makeExecutableDirs",
    "buildBinary:win": "npm run prepareBuild && boxednode --source ./js/server.js --target bin/win/xfer.exe -n ^20.0.0",
    "buildBinary:osx": "npm run prepareBuild && boxednode --source ./js/server.js --target bin/osx/xfer -n ^20.0.0",
    "buildBinary:linux": "npm run prepareBuild && boxednode --source ./js/server.js --target bin/linux/xfer -n ^20.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "commander": "^12.1.0",
    "fs": "^0.0.1-security",
    "net": "^1.0.2",
    "path": "^0.12.7",
    "xmodem.ts": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "boxednode": "^2.4.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3"
  }
}

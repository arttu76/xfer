{
  "name": "xfer",
  "version": "1.0.0",
  "description": "XMODEM server for old computers",
  "scripts": {
    "dev": "ts-node-dev server.ts",
    "start": "ts-node server.ts",
    "prepareBinaryBuild": "mkdir -p js && tsc && mkdir -p bin",
    "buildBinary:osx": "npm run prepareBinaryBuild && boxednode --source ./js/server.js --target bin/xfer-osx -n ^20.0.0",
    "buildBinary:linux": "npm run prepareBinaryBuild && boxednode --source ./js/server.js --target bin/xfer-linux -n ^20.0.0"
  },
  "keywords": [ "retrogaming", "xmodem", "serial", "wifi modem" ],
  "author": "arttu@solvalou.com",
  "license": "WTFPL",
  "dependencies": {
    "commander": "^12.1.0",
    "fs": "^0.0.1-security",
    "net": "^1.0.2",
    "path": "^0.12.7",
    "xmodem.ts": "^0.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "boxednode": "^2.4.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3"
  }
}
